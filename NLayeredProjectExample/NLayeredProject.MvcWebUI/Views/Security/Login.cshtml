@model NLayeredProjectExample.MvcWebUI.Models.Security.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutSecurity.cshtml";
    var returnUrl = @Context.Request.Query["returnurl"];
}

<div class="account-pages"></div>
<div class="clearfix"></div>
<div class="wrapper-page">
    <div class="m-t-40 card-box">
        <div class="text-center">
        </div>
        <div class="panel-body">
            <form class="form-horizontal m-t-20" asp-action="Login" asp-controller="Security" asp-route-returnurl="@returnUrl">
                <div class="text-center">
                    <a href="/Home/Index" class="logo"><span>NLayered<span>Project</span></span></a>
                </div>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input asp-for="@Model.Email" class="form-control" type="text" required="" placeholder="Email">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <input asp-for="@Model.Password" class="form-control" type="password" required="" placeholder="Şifre">
                    </div>
                </div>

                <div class="form-group ">
                    <div class="col-xs-12">
                        <div class="checkbox checkbox-custom">
                            <input id="checkbox-signup" type="checkbox">
                            <label for="checkbox-signup">
                                Beni hatırla
                            </label>
                        </div>

                    </div>
                </div>

                <div class="form-group text-center m-t-30">
                    <div class="col-xs-12">
                        <button class="btn btn-custom btn-bordred btn-block waves-effect waves-light" type="submit">Giriş</button>
                    </div>
                </div>

                <div class="form-group m-t-30 m-b-0">
                    <div class="col-sm-6">
                        <a href="/Security/ForgotPassword" class="text-muted"><i class="fa fa-lock m-r-5"></i> Şifremi unuttum</a>
                    </div>
                    <div class="col-sm-6">
                        <a href="/Security/Register" class="text-primary pull-right"><i class="fa fa-user-plus m-r-5"></i>Kayıt Ol</a>
                    </div>
                </div>
            </form>

        </div>
    </div>
    <!-- end card-box-->

</div>
<!-- end wrapper page -->
